{
  "name": "netflix-player-toolkit",
  "version": "1.0.7",
  "description": "Netflix Player Toolkit",
  "main": "dist/bundle.js",
  "type": "module",
  "engines": {
    "node": "22.17.0"
  },
  "scripts": {
    "build": "npm run clean && esbuild src/index.ts --bundle --platform=browser --target=es2022 --format=iife --outfile=dist/userscript.js --banner:js=\"$(sed \"s/VERSION_PLACEHOLDER/$npm_package_version/g\" userscript-header.txt)\"",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/inoshun/netflix-player-toolkit.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/inoshun/netflix-player-toolkit/issues"
  },
  "homepage": "https://github.com/inoshun/netflix-player-toolkit#readme",
  "devDependencies": {
    "@types/node": "^24.0.6",
    "@types/tampermonkey": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "esbuild": "^0.24.2",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
